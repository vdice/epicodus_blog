<div class="container article">
  <h2>{{post.headline}}</h2>
  <h4>by {{post.author}}</h4>
  <i><p>
    {{moment-format post.date}}
    {{update-post post=post categories=categories update="update" destroyPost='destroyPost'}}
    <span class="glyphicon glyphicon-trash" aria-hidden="true" {{action 'destroyPost' post}}></span>
  </p></i>
  {{post.content}}
  <ul>
    {{#each category in post.categories}}
      <li>{{category.type}}</li>
    {{/each}}
  </ul>
  {{add-comment post=post addComment="addComment"}}

  <h2>Comments</h2>
  <ul>
    {{#each sortedComments as |comment|}}
    <div class="comments">
      <li>
        <strong>{{comment.user}}</strong>: {{comment.comment}}<br>
        <i class="comment-date">{{moment-format comment.date}}</i>
      </li>
    </div>
    {{/each}}
  </ul>
</div>
