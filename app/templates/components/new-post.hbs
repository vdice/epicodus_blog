{{#if addNewPost}}
  <h1>New Post</h1>
    <div>
      <form class="form-horizontal">
        <div class="form-group">
          <label for="headline">Headline</label>
          {{input value=headline id="headline" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date"}}
        </div>

        <div class="form-group">
          <label for="content">Content</label>
          {{textarea row="4" cols="50" value=content id="content" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image" class="form-control"}}
        </div>

        <p>{{multiselect-checkboxes options=categories labelProperty="type" selection=selectedCategories id="selectedCategories"}}</p>

        <button class="btn btn-success"{{action 'save'}}>Save</button>
        <button class="btn"{{action 'postHide'}}>Cancel</button>
      </form>
    </div>
{{else}}
    <button class="btn" {{action 'postShow'}}>New Post</button>
{{/if}}
