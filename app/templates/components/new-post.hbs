{{#if addNewPost}}
  <h1>New Post</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="headline">Headline</label>
          {{input value=headline id="headline"}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date"}}
        </div>

        <div class="form-group">
          <label for="content">Content</label>
          {{textarea row="4" cols="50" value=content id="content"}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image"}}
        </div>

        <button {{action 'save'}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="btn" {{action 'postShow'}}>New Post</button>
{{/if}}
