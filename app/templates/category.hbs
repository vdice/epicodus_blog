<div class="container main">
  <div class="row">
    <div class="col-lg-10">
      <h1>
        <em>Category:</em><br>
        <small>{{model.category.type}}</small>
      </h1>
      <ul>
        {{#each model.category.posts as |post|}}
          <div class="post-preview">
            {{#link-to 'post' post.id}}
              {{post-tile post=post}}
            {{/link-to}}
          </div>
        {{/each}}
      </ul>
    </div>
    <div class="col-lg-1 col-lg-offset-1">
      <h3>Categories</h3>

      <ul class="categories-main">
        {{#each model.categories as |category|}}
          <li>
            {{#link-to 'category' category.id}}
              {{category.type}}
            {{/link-to}}
          </li>
        {{/each}}
      </ul>

    </div>
  </div>
</div>
